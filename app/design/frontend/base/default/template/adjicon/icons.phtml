	<?php elseif($icon['visualization_type'] == AdjustWare_Icon_Helper_Data::VISUALIZATION_TYPE_COLOR): ?>
		<div id="<?php echo $icon['optionId']?>" class="adj-icon"><a href="" onclick="return false;" title="<?php echo $this->htmlEscape($icon['title']) ?>" class="adjcolor<?php echo $icon['color_icon_type'] ?> <?php if($this->getMode() == 'view') { echo 'adjlarge';} else{ echo 'adjmedium ';} ?> adjprod" style="background: <?php echo $icon['color'] ?>"></a></div>
	<?php endif; ?>
<?php endforeach; ?>
</div>
<?php endif; ?>