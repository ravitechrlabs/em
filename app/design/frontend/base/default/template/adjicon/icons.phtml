<?php if (count($_icons)): ?>
<div class="adj-icons-<?php echo $this->getMode() ?>" >
<?php foreach ($_icons as $icon): ?>
	<?php if(($this->getMode() == 'view' && !$icon['show_images_product']) || ($this->getMode() != 'view' && !$icon['show_images_product_listing'])): continue; endif;?>
    <?php if($icon['visualization_type'] == AdjustWare_Icon_Helper_Data::VISUALIZATION_TYPE_IMAGES): ?>
