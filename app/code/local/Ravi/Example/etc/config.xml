<config>
    <modules>
        <Ravi_Example>
            <version>0.1.0</version>
        </Ravi_Example>
    </modules>
    <frontend>
        <routers>
            <example>
                <use>standard</use>
                <args>
                    <module>Ravi_Example</module>
                    <frontName>example</frontName>
                </args>
            </example>
        </routers>
        <layout>
            <updates>
                <example>
                    <file>example.xml</file>
                </example>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<example>
				<use>admin</use>
				<args>
					<module>Ravi_Example</module>
					<frontName>example</frontName>
				</args>
			</example>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<example module="example">
				<title>Example</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="example">
						<title>Manage Items</title>
						<sort_order>0</sort_order>
						<action>example/adminhtml_example</action>
					</items>
				</children>
			</example>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Ravi_Example>
							<title>Example Module</title>
							<sort_order>10</sort_order>
						</Ravi_Example>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<example>
					<file>example.xml</file>
				</example>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <example>
                <class>Ravi_Example_Model</class>
                <resourceModel>example_mysql4</resourceModel>
            </example>
            <example_mysql4>
                <class>Ravi_Example_Model_Mysql4</class>
                <entities>
                    <example>
                        <table>example</table>
                    </example>
                </entities>
            </example_mysql4>
        </models>
        <resources>
            <example_setup>
                <setup>
                    <module>Ravi_Example</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </example_setup>
            <example_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </example_write>
            <example_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </example_read>
        </resources>
        <blocks>
            <example>
                <class>Ravi_Example_Block</class>
            </example>
        </blocks>
        <helpers>
            <example>
                <class>Ravi_Example_Helper</class>
            </example>
        </helpers>
    </global>
</config>