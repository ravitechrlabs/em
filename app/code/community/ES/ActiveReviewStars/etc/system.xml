<?xml version="1.0"?>
<config>
  <tabs>
    <elevensoft translate="label" module="ActiveReviewStars">
      <label>ElevenSoft</label>
      <sort_order>200</sort_order>
    </elevensoft>
  </tabs>
  <sections>
    <ActiveReviewStars translate="label" module="ActiveReviewStars">
      <label>Active Review Stars</label>
      <tab>elevensoft</tab>
      <frontend_type>text</frontend_type>
      <sort_order>1</sort_order>
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>1</show_in_store>
      <groups>
        <general translate="label" module="ActiveReviewStars">
          <label>General</label>
          <sort_order>1</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
            <enabled translate="label">
              <label>Status</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_enabledisable</source_model>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </enabled> 
            <review_star_mode translate="label">
              <label>Star Mode</label>
              <frontend_type>select</frontend_type>
              <source_model>ActiveReviewStars/source_reviewmode</source_model>
              <sort_order>2</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <comment>Works only if only one Rating exists for reviews</comment>
            </review_star_mode>
            <show_label translate="label">
              <label>Show Label</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>3</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <comment>Works only with Single Mode</comment>
            </show_label> 
          </fields>
        </general>
        <additional translate="label" module="ActiveReviewStars">
          <label>Additional</label>
          <sort_order>2</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
            <enabled_jquery translate="label">
              <label>jQuery Enabled</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_enabledisable</source_model>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <comment>Disable jQuery if it is already loaded by another module.</comment>
            </enabled_jquery>
          </fields>
        </additional>
      </groups>
    </ActiveReviewStars>
  </sections>
</config>