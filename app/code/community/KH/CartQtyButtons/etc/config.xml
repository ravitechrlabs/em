<config>
    <modules>
        <KH_CartQtyButtons>
            <version>0.3.0</version>
        </KH_CartQtyButtons>
    </modules>
    <global>
        <models>
            <CartQtyButtonsAdmin>
            	<class>KH_CartQtyButtons_Model_Admin</class>
            </CartQtyButtonsAdmin>
        </models>
        <helpers>
            <CartQtyButtons>
                <class>KH_CartQtyButtons_Helper</class>
            </CartQtyButtons>
        </helpers>
    </global>
    <frontend>
        <translate>
            <modules>
                <KH_CartQtyButtons>
                    <files>
                        <default>KH_CartQtyButtons.csv</default>
                    </files>
                </KH_CartQtyButtons>
            </modules>
        </translate>
        <layout>
            <updates>
                <cartqtybuttons>
                    <file>cartqtybuttons.xml</file>
                </cartqtybuttons>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <KH_CartQtyButtons>
                    <files>
                        <default>KH_CartQtyButtons.csv</default>
                    </files>
                </KH_CartQtyButtons>
            </modules>
        </translate>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <cartqtybuttons translate="title" module="CartQtyButtons">
                                            <title>KH CartQtyButtons Settings</title>
                                        </cartqtybuttons>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
        <cartqtybuttons>
            <settings>
                <js_selector>#shopping-cart-table tbody tr td input.qty</js_selector>
                <button_position>both_right</button_position>
                <null_behavior>0</null_behavior>
                <increase_step>1</increase_step>
                <increase_decimal_step>0.1</increase_decimal_step>
            </settings>
        </cartqtybuttons>
    </default>
</config> 